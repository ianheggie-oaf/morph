development: &development
  adapter: mysql2
  username: root
  password: <%= ENV.fetch("MYSQL_ROOT_PASSWORD", "").inspect %>
  host: mysql
  pool: 5
  database: scraping_development

# Warning: The database defined as "test" will be erased and
# re-generated from your development database when you run "rake".
# Do not set this db to the same as development or production.
test:
  <<: *development
  database: scraping_test

production:
  adapter: mysql2
  database: scraping_production
  username: scraping
  password: or set directly in file?
  # This needs to be high to handle the concurrency in sidekiq
  pool: 25
